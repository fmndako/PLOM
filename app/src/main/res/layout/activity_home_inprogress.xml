<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hlinear"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gradiant" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="16dp">


            <customfonts.MyTextView
                android:id="@+id/tvUserGone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/email"
                android:textColor="@color/gray"
                android:textSize="20dp" />

            <customfonts.MyTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="@string/email"
                android:textColor="@color/button_signin"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/llBorrows"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"

                        app:srcCompat="@drawable/borrowing" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSizeBorrows"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="0 Borrowed"
                        android:textColor="#85ffffff"
                        android:textSize="12dp" />

                    <customfonts.MyTextView
                        android:id="@+id/tvTotalBorrows"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:text="N 2000"
                        android:textColor="#85ffffff"
                        android:textSize="12dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rectangle_main_logo"

                    android:gravity="bottom"
                    app:srcCompat="@drawable/lending" />


                <LinearLayout
                    android:id="@+id/llLends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:src="@drawable/giving"

                        app:srcCompat="@drawable/giving" />


                    <customfonts.MyTextView
                        android:id="@+id/tvSizeLends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 Lent"
                        android:textColor="#85ffffff"
                        android:textSize="12dp" />

                    <customfonts.MyTextView
                        android:id="@+id/tvTotalLends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="N 2000"
                        android:textColor="#85ffffff"
                        android:textSize="12dp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/hlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <customfonts.MyTextView
                android:id="@+id/tvTotalActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:hint="15 Active Loans"
                android:maxLength="12"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#181737"
                android:textColorHint="#181737"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <customfonts.MyTextView
                android:id="@+id/tvSizeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:hint="20 Loan Transactions"
                android:maxLength="12"
                android:paddingBottom="10dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <customfonts.MyTextView
                android:id="@+id/hemail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:hint="20 Loan Transactions"
                android:maxLength="12"
                android:padding="1dp"
                android:paddingBottom="10dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="16dp" />
        </LinearLayout>

        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <customfonts.MyTextView
                android:id="@+id/hpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="right"
                android:maxLength="12"
                android:padding="16dp"
                android:text="Deficit:"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />

            <customfonts.MyTextView
                android:id="@+id/tvDeficit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="left"
                android:hint="N0000"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <customfonts.MyTextView
                android:id="@+id/tvTotalAllText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="right"
                android:maxLength="12"
                android:padding="16dp"
                android:text="Loan Sum:"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />

            <customfonts.MyTextView
                android:id="@+id/tvTotalAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="left"
                android:maxLength="12"
                android:padding="16dp"
                android:text="Loan Sum:"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />

            <!--<ToggleButton-->
            <!--android:id="@+id/hToggleButton1"-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="32dp"-->
            <!--android:paddingLeft="20dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/toogle_switch"-->

            <!--/>-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
<!--start of date loans-->
            <LinearLayout
                android:id="@+id/llDueSoon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_date_duesoon"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    app:srcCompat="@drawable/error" />


                <customfonts.MyTextView
                    android:id="@+id/tvSizeDueSoon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 Lent"
                    android:textColor="@color/date_color"
                    android:textSize="12dp" />

                <customfonts.MyTextView
                    android:id="@+id/tvTotalDueSoon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="N 2000"
                    android:textColor="@color/date_color"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_date_due"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    app:srcCompat="@drawable/error" />


                <customfonts.MyTextView
                    android:id="@+id/tvSizeDue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 Lent"
                    android:textColor="@color/date_color"
                    android:textSize="12dp" />

                <customfonts.MyTextView
                    android:id="@+id/tvTotalDue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="N 2000"
                    android:textColor="@color/date_color"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOverDue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_date_overdue"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="bottom"

                    app:srcCompat="@drawable/error" />


                <customfonts.MyTextView
                    android:id="@+id/tvSizeOverdue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 Lent"
                    android:textColor="@color/date_color"
                    android:textSize="12dp" />

                <customfonts.MyTextView
                    android:id="@+id/tvTotalOverdue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="N 2000"
                    android:textColor="@color/date_color"
                    android:textSize="12dp" />


            </LinearLayout>
<!--end of date-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <customfonts.MyTextView
                android:id="@+id/hgoogle"
                style="@style/AppTheme.Buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:textSize="16dp"
                android:visibility="invisible" />

            <customfonts.MyTextView
                android:id="@+id/tvSignOut"
                style="@style/AppTheme.Buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:textSize="16dp" />

        </LinearLayout>







    </LinearLayout>









</RelativeLayout>