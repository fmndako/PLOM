<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">


    <!--totals-->
    <LinearLayout
        android:id="@+id/llTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <customfonts.MyTextView
            android:id="@+id/tvSizeLends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="1dp"
            android:text="0 Lent"
            android:textColor="@color/button_signin"
            android:textSize="12sp" />

        <customfonts.MyTextView
            android:id="@+id/tvTotalLends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="N0"
            android:textColor="@color/button_signin"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTex"
            android:entries="@array/loan_filter"
            android:layout_weight="1" />


    </LinearLayout>
<!--total-->
    <LinearLayout
        android:id="@+id/hlinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/llTotal"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:id="@+id/tvNoLoans"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="10dp"-->
            <!--android:gravity="center"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:text="@string/No_loans"-->
            <!--android:visibility="gone" />-->

        <ProgressBar
            android:id="@+id/register_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            tools:listitem="@layout/loan_rv" />

    </LinearLayout>









</RelativeLayout>
