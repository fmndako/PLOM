<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">


    <FrameLayout
        android:id="@+id/flprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hlinear"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gradiant" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/navigation_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/settings_outline" />

                <ImageView
                    android:id="@+id/navigation_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_notifications_black_24dp" />


                <customfonts.MyTextView
                    android:id="@+id/tvUserGone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:letterSpacing="0.2"
                    android:text="@string/email"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>


            <customfonts.MyTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:letterSpacing="0.2"
                android:text="@string/email"

                android:textColor="@color/button_signin"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/llBorrows"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:background="@color/white"
                        android:gravity="bottom"
                        app:srcCompat="@drawable/borrowing" />

                    <customfonts.MyTextView
                        android:id="@+id/tvCountBorrows"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="0 Borrowed"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSumBorrows"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMainLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="0.2dp"
                    android:background="@drawable/rectangle_gray"
                    android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/rectangle_main_logo"

                    android:gravity="bottom"
                    app:srcCompat="@drawable/lending" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="bottom"
                        app:srcCompat="@drawable/giving" />


                    <customfonts.MyTextView
                        android:id="@+id/tvCountLends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 Lent"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSumLends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </FrameLayout>



    <!--TODO line-->
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="top"-->
        <!--android:padding="1dp"-->
        <!--android:background="@color/black"-->
        <!--android:layout_below="@id/fl"-->
        <!--&gt;</LinearLayout>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dad8d8"
        android:layout_above="@+id/hlinear"/>
    <LinearLayout
        android:id="@+id/hlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <customfonts.MyTextView
                android:id="@+id/tvActiveCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:hint="15 Active Loans"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#181737"
                android:textColorHint="#181737"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <customfonts.MyTextView
                android:id="@+id/tvClearedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:hint="5 Cleared"
                android:paddingBottom="10dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <customfonts.MyTextView
                android:id="@+id/tvOverallCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:hint="20 Total"
                android:padding="1dp"
                android:paddingBottom="10dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="16dp" />
        </LinearLayout>

        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>

        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <customfonts.MyTextView
                        android:id="@+id/hpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:text="Deficit:"
                        android:textColor="#a2a1b8"
                        android:textSize="16dp" />

                    <customfonts.MyTextView
                        android:id="@+id/tvDeficit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"
                        android:hint="N0000"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColorHint="#1b193b" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <!--total sum-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/tvSumAllText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:text="Loan Sum:"
                        android:textColor="#a2a1b8"
                        android:textSize="16dp" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSumAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:text="Loan Sum:"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <!--<ToggleButton-->
                    <!--android:id="@+id/hToggleButton1"-->
                    <!--android:layout_width="120dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:paddingLeft="20dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/toogle_switch"-->

                    <!--/>-->
                </LinearLayout>


            </LinearLayout>




        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle"

            >
            <!--start of date loans-->
            <LinearLayout
                android:id="@+id/llDueSoon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/date_duesoon"
                android:orientation="vertical"
                android:padding="0.3dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llDueSoon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        app:srcCompat="@drawable/error" />


                    <customfonts.MyTextView
                        android:id="@+id/tvCountDueSoon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 Lent"
                        android:textColor="@color/date_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSumDueSoon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="N 2000"
                        android:textColor="@color/date_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/date_due"
                android:orientation="vertical"
                android:padding="0.2dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llDue1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        app:srcCompat="@drawable/error" />


                    <customfonts.MyTextView
                        android:id="@+id/tvCountDue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 Lent"
                        android:textColor="@color/date_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSumDue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="N 2000"
                        android:textColor="@color/date_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOverDue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/date_overdue"
                android:orientation="vertical"
                android:padding="0.2dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llOverDue1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"

                        app:srcCompat="@drawable/error" />


                    <customfonts.MyTextView
                        android:id="@+id/tvCountOverdue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 Lent"
                        android:textColor="@color/date_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <customfonts.MyTextView
                        android:id="@+id/tvSumOverdue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="N 2000"
                        android:textColor="@color/date_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </LinearLayout>
                <!--end of date-->
            </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:clickable="true"
            app:elevation="5dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/borrowing" />
    </FrameLayout>



</RelativeLayout>