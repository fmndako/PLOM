<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llcontent"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvResetEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"

            android:text="The token was sent to your registered mail"
            android:textColor="@color/button_signin"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etForgotTokenUser"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/button_signin"
            android:hint="@string/forgot_pwd_username"/>

        <EditText
            android:id="@+id/etForgotTokenToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="@string/forgot_token"
            android:inputType="text"
            android:textColor="@color/button_signin" />

        <EditText
            android:id="@+id/etForgotTokenPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="@string/new_pwd"
            android:inputType="textPassword"
            android:textColor="@color/button_signin" />

        <EditText
            android:id="@+id/etForgotTokenConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="@string/confirmPassword"
            android:inputType="textPassword"
            android:textColor="@color/button_signin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dlgconfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#009a9a"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:padding="16dp"
                android:text="CONFIRM"
                android:textColor="#d9e5f3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dlgcancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#009a9a"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:padding="16dp"
                android:text="CANCEL"
                android:textColor="#d9e5f3"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llprogressbar"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>
</LinearLayout>
