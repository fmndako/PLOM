<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/retangle"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llClearGone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivLRVClear"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circle"
                    android:visibility="visible"
                    app:srcCompat="@drawable/check_all" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--LRV list-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivLoanType"
                        android:layout_width="120px"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangle_giving"
                        android:gravity="center"
                        app:srcCompat="@drawable/giving" />


                    <ImageView
                        android:id="@+id/ivLoanTypeGone"
                        android:layout_width="120px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_borrowing"
                        android:gravity="center"
                        android:visibility="gone"
                        app:srcCompat="@drawable/borrowing" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:orientation="vertical"

                        android:paddingLeft="16dp">

                        <TextView

                            android:id="@+id/tvLRVName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:text="Lemon peel Base ball"
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:textColor="@color/colorblue"

                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvLRVDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="$ 250.00"
                            android:textColor="@color/colorSub"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/tvLRVRemarks"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:text="kglfdgkf  sdfdf"
                            android:textColor="@color/colorSub"
                            android:textSize="12dp"
                            android:visibility="gone" />


                    </LinearLayout>


                </LinearLayout>
                <!--end LRV list-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBalanceGone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="7dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Balance:"
                        android:textColor="@color/colorSub"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvLRVAmount"
                        style="@style/text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" 10000000"

                        android:textColor="@color/colorSub"
                        android:textSize="16sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="01.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#E3E3E3"></LinearLayout>

            <LinearLayout
                android:id="@+id/llNotifyGone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvLRVtime"
                    style="@style/heading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"

                    android:text="6h 21m - 1 stop , DXB"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="#b2b2b2" />

                <ImageView
                    android:id="@+id/ivLRVNotifyOn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/bell_off" />

                <ImageView
                    android:id="@+id/ivLRVNotifyOff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:srcCompat="@drawable/bell_ring" />


            </LinearLayout>

    </LinearLayout>


</LinearLayout>